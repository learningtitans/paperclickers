<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txt_hint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/icon_margin_left"
        android:layout_marginTop="@dimen/icon_margin_top"
        android:textColor="@android:color/white"
        android:textSize="24sp" >
    </TextView>

    <TextView
        android:id="@+id/txt_hint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/icon_margin_top"
        android:layout_marginEnd="@dimen/icon_margin_left"
        android:gravity="end"
        android:text="@string/hint2"
        android:textColor="@android:color/white"
        android:textSize="24sp" >

    </TextView>
    
    <TextView
        android:id="@+id/txt_freqDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/debug_code_frequencies_horizontal_margin"
        android:layout_marginRight="@dimen/debug_code_frequencies_horizontal_margin"
        android:text="@string/frequencies_debug"
        android:textColor="@android:color/white"
        android:textSize="10sp" >
    </TextView>
    
    <TextView
        android:id="@+id/txt_development_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/icon_margin_top"
        android:layout_marginLeft="@dimen/icon_margin_left"
        android:text="@string/development_current_cycle"
        android:textColor="@android:color/white"
        android:textSize="10sp" >
    </TextView>    

</RelativeLayout>