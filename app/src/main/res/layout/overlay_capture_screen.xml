<com.paperclickers.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlay_capture_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="20sp"
    android:background="#dd223823" >

    <TextView
        android:id="@+id/overlay_too_close_text"
