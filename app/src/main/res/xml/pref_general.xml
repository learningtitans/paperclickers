<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@string/pref_default_number_of_students"
        android:inputType="number"
        android:key="students_number"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_number_of_students" />

    <ListPreference
        android:key="questions_tagging"
        android:title="@string/pref_title_questions_tagging"
        android:entryValues="@array/pref_questions_tagging_sequence_values"
        android:entries="@array/pref_questions_tagging_sequence_titles"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:defaultValue="0"/>

</PreferenceScreen>
