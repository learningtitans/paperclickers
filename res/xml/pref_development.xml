<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory 
        android:title="@string/pref_header_development">
        
	    <!--
	         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
	         dismiss it.
	    -->
	    
	    <EditTextPreference
	        android:defaultValue="@string/pref_default_validation_threshold"
	        android:inputType="number"
	        android:key="development_validation_threshold"
	        android:maxLines="1"
	        android:selectAllOnFocus="true"
	        android:singleLine="true"
	        android:title="@string/pref_title_validation_threshold" />	    
	    
	    
	    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
	    <ListPreference
	        android:defaultValue="1"
	        android:entries="@array/pref_show_topcodes_validation_titles"
	        android:entryValues="@array/pref_show_topcodes_validation_values"
	        android:key="development_show_validation"
	        android:negativeButtonText="@null"
	        android:positiveButtonText="@null"
	        android:title="@string/pref_title_show_topcodes_validation" />
		        
    </PreferenceCategory>

</PreferenceScreen>
